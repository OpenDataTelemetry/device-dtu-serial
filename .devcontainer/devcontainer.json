{
  "name": "ESP-IDF",
  "image": "espressif/idf:v5.2.1",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/device-fsaelive-telemetry,type=bind",
  "workspaceFolder": "/workspaces/device-fsaelive-telemetry",
  "mounts": [
    "source=extensionCache,target=/root/.vscode-server/extensions,type=volume"
  ],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "zsh",
    "idf.espIdfPath": "/opt/esp/idf",
    "idf.customExtraPaths": "",
    "idf.pythonBinPath": "/opt/esp/python_env/idf5.2_py3.10_env/bin/python",
    "idf.toolsPath": "/opt/esp",
    "idf.gitPath": "/usr/bin/git"
  },
  "extensions": [
    "ms-vscode.cpptools",
		"espressif.esp-idf-extension"
  ],
  "runArgs": [
    "--privileged"
  ]
}